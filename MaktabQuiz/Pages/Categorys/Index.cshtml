@page
@model MaktabQuiz.Pages.Categorys.IndexModel
@{
}
<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <h4 class="header-title m-t-0 m-b-30">Category List</h4>

            <table id="datatable-buttons" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td>ID</td>
                        <th>Name</th>                       
                        <th>Settings</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model.Category)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a asp-route-id="@item.Id" onclick="confirm('آیا از حذف آیتم مطمئنید؟!')">
                                    <span class="btn btn-danger">حذف</span>
                                </a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
